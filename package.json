{
  "name": "visual-ui-mcp-server",
  "version": "3.0.0",
  "description": "MCP Server for visual UI testing and browser automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "install-browsers": "npx playwright install chrome",
    "test": "find test -name 'test-*.js' -type f | sort | xargs -I {} sh -c 'echo \"\\nðŸŽ­ Running {}...\" && node \"$1\"' _ {} || true",
    "test:local": "HEADLESS=false npm run test",
    "test:headed": "npm run test:local",
    "test:ci": "HEADLESS=true npm run test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "fs-extra": "^11.2.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
